    </div>
    <div class="tile is-parent is-vertical">
        <article class="tile is-child notification ">
          <p class="title">Weather Forcasts</p>
          <hr />
          <app-weather-current-2-step-detail></app-weather-current-2-step-detail>
          <div class="box">
            <app-weather-7day-12h-chart></app-weather-7day-12h-chart>
          </div>
        </article>



        <article class="tile is-child notification ">
          <p class="title">Record Event</p>
          <hr />

          <button class="button is-fullwidth" onclick="newEventAdder()" style="position: absolute; bottom: 2%; width:90%;">New Record</button>

          <div class="modal" id="newEventModal">
            <div class="modal-background"></div>
            <div class="modal-content">
                  <div.box><app-physical-event-adder></app-physical-event-adder></div>
            </div>
            <button class="modal-close is-large" aria-label="close" onclick="newEventAdder()"></button>
          </div>

        </article>


