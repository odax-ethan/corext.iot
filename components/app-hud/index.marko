                <div class="tile is-child notification ">



                      <hr />
                    <app-system-read-out systemConfig = input.systemConfig ></app-system-read-out>
                    <hr />
                    <div class="box">System State Thingy</div>
                </div>
                <article class="tile is-child notification ">
                    <!-- <p.subtitle>Event Stream Terminal</p> -->
                    <app-event-stream></app-event-stream>
                </article>
            </div>
            <div class="tile is-parent">
                <article class="tile is-child notification ">
                    <p class="title">Device tile</p>
                    <hr />
                    <p class="subtitle">Relays</p>
                    <app-relay-bank systemDevices = input.systemDevices></app-relay-bank>
                    <hr />
                    <p class="subtitle">Sensors</p>
                    <app-sensor-bank systemDevices = input.systemDevices></app-sensor-bank>
